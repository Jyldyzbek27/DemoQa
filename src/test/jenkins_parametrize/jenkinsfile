pipeline {
    agent any

    // Параметры для задания
    parameters {
        string(name: 'testGroup', defaultValue: 'UI', description: 'Group of tests to run')
    }

    // Автоматический запуск каждый день в 12:00
    triggers {
        cron('0 12 * * *') // Запуск каждый день в 12:00
    }

    stages {
        stage('Build') {
            steps {
                script {
                    // Запуск Maven с указанием testGroup, который будет передан
                    sh 'clean test -DtestGroup=${testGroup}'
                }
            }
        }
    }
}
